<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiHello.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiHello.Views"
    Title="MauiHello">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <!--<ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:NotePage}"
             />-->

        <ShellContent
            Title="VerticalStackLayout"
            ContentTemplate="{DataTemplate views:VerticalStackLayout}"
            />

        <ShellContent
            Title="Test Page"
            ContentTemplate="{DataTemplate views:TestPage}"
            />

        <ShellContent
            Title="BoxViews"
            ContentTemplate="{DataTemplate views:BoxViews}"
            />

        <ShellContent
            Title="All Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            />

        <ShellContent
            Title="Register"
            ContentTemplate="{DataTemplate views:CustomRegisterPage}"
            />

        <ShellContent
            Title="Tip Calculator"
            ContentTemplate="{DataTemplate views:TipCalculator}"
            />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            />
    </TabBar>
</Shell>
