<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiHello.ViewModels"
             x:Class="MauiHello.Views.MainPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="About" Clicked="AboutToolbarItem_Clicked" />
        <ToolbarItem Text="Feedback" Clicked="FeedbackToolbarItem_Clicked" />
        <ToolbarItem Text="Settings" Clicked="SettingsToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*">
        <!-- Header section -->
        <StackLayout Grid.Row="0" Padding="20" Spacing="15">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="100"
                Aspect="AspectFit" />

            <Label
                Text="{Binding Title}"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center" />

            <Button
                Text="Get Monkeys"
                Command="{Binding GetMonkeysCommand}"
                IsEnabled="{Binding IsNotBusy}"
                BackgroundColor="#2E8B57"
                TextColor="White"
                FontSize="16"
                CornerRadius="25"
                HeightRequest="45" />

            <ActivityIndicator 
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                Color="#2E8B57" />
        </StackLayout>

        <!-- Monkeys collection with Pull-to-Refresh -->
        <RefreshView 
            Grid.Row="1"
            Command="{Binding GetMonkeysCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            
            <CollectionView 
                ItemsSource="{Binding Monkeys}"
                BackgroundColor="LightGray">
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Frame BackgroundColor="White" 
                                   CornerRadius="10" 
                                   HasShadow="True"
                                   Padding="0">
                                
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=GoToDetailsCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="100,*" Padding="15">
                                    <!-- Monkey image -->
                                    <Frame Grid.Column="0"
                                           CornerRadius="50"
                                           IsClippedToBounds="True"
                                           HeightRequest="80"
                                           WidthRequest="80"
                                           Padding="0"
                                           Margin="0,0,15,0">
                                        <Image Source="{Binding Image}"
                                               Aspect="AspectFill" />
                                    </Frame>
                                    
                                    <!-- Monkey details -->
                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="{Binding Name}" 
                                               FontSize="18" 
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Location}" 
                                               FontSize="14" 
                                               TextColor="Gray" />
                                        <Label Text="{Binding Population, StringFormat='Population: {0:N0}'}" 
                                               FontSize="12" 
                                               TextColor="DarkGray" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <StackLayout Padding="50" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="🐵" FontSize="60" HorizontalOptions="Center" />
                        <Label Text="No monkeys found!" 
                               FontSize="18" 
                               HorizontalOptions="Center"
                               TextColor="Gray" />
                        <Label Text="Pull to refresh or tap 'Get Monkeys'" 
                               FontSize="14" 
                               HorizontalOptions="Center"
                               TextColor="LightGray" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
