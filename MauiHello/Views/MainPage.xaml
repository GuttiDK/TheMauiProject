<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHello.Views.MainPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="About" Clicked="AboutToolbarItem_Clicked" />
        <ToolbarItem Text="Feedback" Clicked="FeedbackToolbarItem_Clicked" />
        <ToolbarItem Text="Settings" Clicked="SettingsToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="{Binding Title}"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to the Monkey Finder App!"
                Style="{StaticResource SubHeadline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2" />

            <!-- Get Monkeys Button -->
            <Button
                Text="Get Monkeys"
                Command="{Binding GetMonkeysCommand}"
                IsEnabled="{Binding IsNotBusy}"
                BackgroundColor="#2E8B57"
                TextColor="White"
                FontSize="18"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Load monkeys from the data source" />

            <!-- Loading indicator -->
            <ActivityIndicator 
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                Color="#2E8B57"
                HeightRequest="50" />

            <!-- Monkey count display -->
            <Frame 
                BackgroundColor="LightBlue"
                Padding="15"
                CornerRadius="10"
                IsVisible="{Binding Monkeys.Count, Converter={StaticResource IntToBoolConverter}}"
                HorizontalOptions="Fill">
                <Label 
                    Text="{Binding Monkeys.Count, StringFormat='Found {0} monkeys!'}"
                    FontSize="16"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="DarkBlue" />
            </Frame>

            <!-- Simple list of monkey names -->
            <CollectionView 
                ItemsSource="{Binding Monkeys}"
                IsVisible="{Binding Monkeys.Count, Converter={StaticResource IntToBoolConverter}}"
                HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Frame BackgroundColor="White" 
                                   CornerRadius="8" 
                                   HasShadow="True"
                                   Padding="15">
                                <StackLayout>
                                    <Label Text="{Binding Name}" 
                                           FontSize="18" 
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding Location}" 
                                           FontSize="14" 
                                           TextColor="Gray" />
                                    <Label Text="{Binding Population, StringFormat='Population: {0:N0}'}" 
                                           FontSize="12" 
                                           TextColor="DarkGray" />
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
