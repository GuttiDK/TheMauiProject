<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHello.Views.TipCalculator"
             Title="TipCalculator">
    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="10">

            <!-- Bill group -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Bill"
                       FontAttributes="Bold"
                       FontSize="20"
                       WidthRequest="100"
                       VerticalOptions="Center" />
                <Entry x:Name="billEntry"
                       Placeholder="Enter Amount"
                       Keyboard="Numeric"
                       TextChanged="OnBillOrTipChanged"
                       HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>

            <!-- Tip group -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Tip"
                       FontSize="18"
                       WidthRequest="100"
                       VerticalOptions="Center" />
                <Label x:Name="tipLabel"
                       FontSize="18"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Total group -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Total"
                       FontSize="18"
                       FontAttributes="Bold"
                       WidthRequest="100"
                       VerticalOptions="Center" />
                <Label x:Name="totalLabel"
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Tip Percentage group -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Tip Percentage"
                       FontSize="18"
                       WidthRequest="100"
                       VerticalOptions="Center" />
                <Label x:Name="percentageLabel"
                       FontSize="16"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Slider -->
            <Slider x:Name="tipSlider"
                    Minimum="0"
                    Maximum="100"
                    Value="15"
                    ValueChanged="OnSliderChanged" />

            <!-- Button group: 15% and 20% -->
            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0" HorizontalOptions="Center">
                <Button Text="15%"
                        WidthRequest="150"
                        Clicked="OnFifteenPercentClicked" />
                <Button Text="20%"
                        WidthRequest="150"
                        Clicked="OnTwentyPercentClicked" />
            </HorizontalStackLayout>

            <!-- Button group: Round Down and Round Up -->
            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0" HorizontalOptions="Center">
                <Button Text="Round Down"
                        WidthRequest="150"
                        Clicked="OnRoundDownClicked" />
                <Button Text="Round Up"
                        WidthRequest="150"
                        Clicked="OnRoundUpClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>