<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHello.Views.TipCalculator"
             Title="TipCalculator">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Bill" FontAttributes="Bold" FontSize="20" />
            <Entry x:Name="billEntry"
                   Placeholder="Enter Amount"
                   Keyboard="Numeric"
                   TextChanged="OnBillOrTipChanged" />

            <Label x:Name="tipLabel" Text="Tip" FontSize="18"/>
            <Label x:Name="totalLabel" Text="Total" FontSize="18" FontAttributes="Bold" />

            <Label Text="Tip Percentage" FontSize="18" />
            <Slider x:Name="tipSlider"
                    Minimum="0"
                    Maximum="100"
                    Value="15"
                    ValueChanged="OnSliderChanged" />

            <Label x:Name="percentageLabel" Text="15%" FontSize="16"/>

            <Button Text="15%" Clicked="OnFifteenPercentClicked" />
            <Button Text="20%" Clicked="OnTwentyPercentClicked" />
            <Button Text="Round Down" Clicked="OnRoundDownClicked" />
            <Button Text="Round Up" Clicked="OnRoundUpClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>