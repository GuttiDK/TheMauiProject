<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHello.Views.CalculatorPage"
             Title="CalculatorPage"
             BackgroundColor="#222">

    <VerticalStackLayout Padding="0" Spacing="0" BackgroundColor="#222">
        <!-- Expression Preview Area -->
        <Grid Padding="20,20,20,0" BackgroundColor="#222">
            <Label x:Name="expressionLabel"
                   Text=""
                   FontSize="28"
                   TextColor="#A5A5A5"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center" />
        </Grid>
        <!-- Display Area -->
        <Grid Padding="20,10,20,10" BackgroundColor="#222">
            <Label x:Name="displayLabel"
                   Text="0"
                   FontSize="48"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center" />
        </Grid>

        <!-- Button Grid -->
        <Grid RowDefinitions="*,*,*,*,*"
              ColumnDefinitions="*,*,*,*"
              Padding="10"
              BackgroundColor="#222"
              ColumnSpacing="10"
              RowSpacing="10">

            <!-- Top row: C, +/-, %, ÷ -->
            <Button Text="C" Grid.Row="0" Grid.Column="0" Clicked="OnClearClicked"
                    BackgroundColor="#A5A5A5" TextColor="Black" FontSize="28" CornerRadius="30" />
            <Button Text="+/-" Grid.Row="0" Grid.Column="1" Clicked="OnSignClicked"
                    BackgroundColor="#A5A5A5" TextColor="Black" FontSize="28" CornerRadius="30" />
            <Button Text="%" Grid.Row="0" Grid.Column="2" Clicked="OnPercentClicked"
                    BackgroundColor="#A5A5A5" TextColor="Black" FontSize="28" CornerRadius="30" />
            <Button Text="÷" Grid.Row="0" Grid.Column="3" Clicked="OnDivideClicked"
                    BackgroundColor="#FF9500" TextColor="White" FontSize="28" CornerRadius="30" />

            <!-- Row 2: 7, 8, 9, × -->
            <Button Text="7" Grid.Row="1" Grid.Column="0" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="8" Grid.Row="1" Grid.Column="1" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="9" Grid.Row="1" Grid.Column="2" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="×" Grid.Row="1" Grid.Column="3" Clicked="OnMultiplyClicked"
                    BackgroundColor="#FF9500" TextColor="White" FontSize="28" CornerRadius="30" />

            <!-- Row 3: 4, 5, 6, − -->
            <Button Text="4" Grid.Row="2" Grid.Column="0" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="5" Grid.Row="2" Grid.Column="1" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="6" Grid.Row="2" Grid.Column="2" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="−" Grid.Row="2" Grid.Column="3" Clicked="OnSubtractClicked"
                    BackgroundColor="#FF9500" TextColor="White" FontSize="28" CornerRadius="30" />

            <!-- Row 4: 1, 2, 3, + -->
            <Button Text="1" Grid.Row="3" Grid.Column="0" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="2" Grid.Row="3" Grid.Column="1" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="3" Grid.Row="3" Grid.Column="2" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="+" Grid.Row="3" Grid.Column="3" Clicked="OnAddClicked"
                    BackgroundColor="#FF9500" TextColor="White" FontSize="28" CornerRadius="30" />

            <!-- Row 5: 0, ., = -->
            <Button Text="0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Clicked="OnDigitClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="," Grid.Row="4" Grid.Column="2" Clicked="OnDecimalClicked"
                    BackgroundColor="#333" TextColor="White" FontSize="28" CornerRadius="30" />
            <Button Text="=" Grid.Row="4" Grid.Column="3" Clicked="OnEqualsClicked"
                    BackgroundColor="#FF9500" TextColor="White" FontSize="28" CornerRadius="30" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>